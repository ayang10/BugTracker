@model IEnumerable<BugTracker.Models.Ticket>

@{
    ViewBag.Title = "Index";
}

<br />
<div class="main-content">
    <div class="container">

        <div class="page-content">

            <!-- Heading -->
            <div class="single-head">
                <!-- Heading -->
                <h1 class="pull-left"><i class="fa fa-table purple"></i> Tickets</h1>

                <div class="pull-right">@Html.ActionLink("Create new Tickets", "Create", null, new { @class = "btn btn-primary" })</div>
                <div class="clearfix"></div>
            </div>

            <!-- Table Page -->
            <div class="page-tables">
                <!-- Table -->
                <div class="table-responsive">
                    <table cellpadding="0" cellspacing="0" border="0" id="data-table" width="100%" class="table">
                        <thead>
                            <tr>
                                <th>Project</th>
                                <th>Created By</th>
                                <th>Priority</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Creation Date</th>
                                <th>MediaUrl</th>
                                <th>Control</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Project.Title
                                    </td>
                                    <td>
                                        @item.UserId
                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.Priority.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Type.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.Raw(item.Description)
                                    </td>
                                    <td>
                                        @item.CreationDate.ToString("D")
                                    </td>
                                 
                                    <td>
                                        @if (item.MediaUrl != null)
                                        {
                                        <img src="@Url.Content(item.MediaUrl)" class="thumbnail" alt="" width="100" height="100" />
                                        }
                                        else
                                        {
                                        <img src="~/perfectum_dashboard_1_0_5/img/No_Image_Available.png" class="thumbnail" alt="" width="100" height="100" />
                                        }
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                                        @if (User.IsInRole("Admin") || (User.IsInRole("ProjectManager")))
                                        {
                                        @Html.ActionLink("AssignTicket", "AssignTicket", new { ticketId = item.Id }, new { @class = "btn btn-success" })
                                        }
                                    </td>
                                </tr>
                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Project</th>
                                <th>Created By</th>
                                <th>Priority</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Creation Date</th>
                                <th>MediaUrl</th>
                                <th>Control</th>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>

</div>


