@model BugTracker.Models.AssignProjectUser

@{
    ViewBag.Title = "BuggyTracker - Project";
}


<h2>Assign Users</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Roles</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <b>Assign Users to Project: @Model.Project.Title</b>
        
        <p><b>Selected Users:</b>
           
        @foreach(var item in Model.Users)
        {
            if (item.Selected) {
                <br />
                <b class="red">@Html.DisplayFor(m => item.Text)</b>

            }
        }

        </p>
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                @Html.ListBoxFor(r => r.SelectedUser, Model.Users, new { style = "width: 50%", size = 10 })

            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
</div>