@model BugTracker.Models.DashboardViewModels

@{
    ViewBag.Title = "BuggyTracker - Dashboard";
}


<br />

@if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
{
    <div class="container">
        <div class="page-content">

            <!-- Heading -->
            <div class="single-head">
                <!-- Heading -->
                <h1 class="pull-left">
                    <i class="fa fa-table purple"></i> Projects
                </h1>
                @if (User.IsInRole("Admin"))
                {
                    <div class="pull-right">@Html.ActionLink("Create new project", "Create", null, new { @class = "btn btn-primary" })</div>
                }
                <div class="clearfix"></div>
            </div>

            <!-- Table Page -->
            <div class="page-tables">
                <!-- Table -->
                <div class="table-responsive">
                    <table cellpadding="0" cellspacing="0" border="0" id="data-table" width="100%" class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Creation Date</th>
                                <th>Created By</th>

                                <th>Control</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Projects)
                            {

                                <tr>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @Html.Raw(item.Description)
                                    </td>
                                    <td>
                                        @item.CreationDate.ToString("D")
                                    </td>
                                    <td>
                                        @item.UserId
                                    </td>

                                    <td>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            @Html.ActionLink("Edit", "Edit", "Projects", new { id = item.Id }, new { @class = "btn btn-info" })
                                            @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                                            @Html.ActionLink("Delete", "Delete", "Projects", new { id = item.Id }, new { @class = "btn btn-danger" })
                                            @Html.ActionLink("AssignUserToProject", "AssignUserView", "Projects", new { projectId = item.Id }, new { @class = "btn btn-primary" })
                                        }


                                    </td>
                                </tr>
                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Creation Date</th>
                                <th>Created By</th>

                                <th>Control</th>

                            </tr>
                        </tfoot>
                    </table>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
}


<br />
@if ((User.IsInRole("Admin")) || (User.IsInRole("ProjectManager")) || (User.IsInRole("Developer")) || (User.IsInRole("Submitter")))
{
    <div class="main-content">
        <div class="container">

            <div class="page-content">

                <!-- Heading -->
                <div class="single-head">
                    <!-- Heading -->
                    <h1 class="pull-left">
                        <i class="fa fa-table purple"></i> Tickets
                    </h1>

                    <div class="pull-right">@Html.ActionLink("Create new Tickets", "Create", null, new { @class = "btn btn-primary" })</div>
                    <div class="clearfix"></div>
                </div>

                <!-- Table Page -->
                <div class="page-tables">
                    <!-- Table -->
                    <div class="table-responsive">
                        <table cellpadding="0" cellspacing="0" border="0" id="data-table1" width="100%" class="table">
                            <thead>
                                <tr>
                                    <th>Project</th>
                                    <th>Created By</th>
                                    <th>Priority</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Creation Date</th>
                                    <th>MediaUrl</th>
                                    <th>Control</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.Tickets)
                                {
                                    <tr>
                                        <td>
                                            @item.Project.Title
                                        </td>
                                        <td>
                                            @item.UserId
                                        </td>
                                        <td>

                                            @Html.DisplayFor(modelItem => item.Priority.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Type.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.Raw(item.Description)
                                        </td>
                                        <td>
                                            @item.CreationDate.ToString("D")
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.MediaUrl)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", "Tickets", new { id = item.Id }, new { @class = "btn btn-warning" })
                                            @Html.ActionLink("Details", "Details", "Tickets", new { id = item.Id }, new { @class = "btn btn-success" })
                                            @Html.ActionLink("Delete", "Delete", "Tickets", new { id = item.Id }, new { @class = "btn btn-danger" })

                                        </td>
                                    </tr>
                                }


                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Project</th>
                                    <th>Created By</th>
                                    <th>Priority</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Creation Date</th>
                                    <th>MediaUrl</th>
                                    <th>Control</th>
                                </tr>
                            </tfoot>
                        </table>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>


}






@section Scripts{

    <script type="text/javascript">
        /* ****************************************** */
        /* Data Table JS */
        /* ****************************************** */

        $(document).ready(function () {
            $('#data-table').dataTable({
                "sPaginationType": "full_numbers"
            });
        });

    </script>


    <script type="text/javascript">
        /* ****************************************** */
        /* Data Table JS */
        /* ****************************************** */

        $(document).ready(function () {
            $('#data-table1').dataTable({
                "sPaginationType": "full_numbers"
            });
        });

    </script>


}