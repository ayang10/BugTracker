@model IEnumerable<BugTracker.Models.Notification>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Ticket Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateNotified)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatorUserId)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.RecipientUserId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Change)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Details)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ticket.Title)
        </td>
        <td>
            @item.DateNotified.ToString("D")
        </td>
        <td>
           
            @item.CreatorUserId
        </td>
        @*<td>
            @item.RecipientUserId
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Change)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>*@
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
